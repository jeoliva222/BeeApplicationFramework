<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_part_slider"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.beeapplicationframework.PartSliderActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:text="Choose your bee's coloration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titleText"
                android:textSize="24sp"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.24"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/abdomenView" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/thoraxView" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/headView" />
                </FrameLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/beeView"
                    android:layout_weight="0.24" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <TextView
                    android:text="Head # (1 / 60)"
                    android:layout_height="wrap_content"
                    android:id="@+id/headText"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="180dp" />

                <ImageButton
                    app:srcCompat="@mipmap/left_arrow"
                    android:id="@+id/leftHeadButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="40dp" />

                <ImageButton
                    android:layout_width="50dp"
                    app:srcCompat="@mipmap/right_arrow"
                    android:id="@+id/rightHeadButton"
                    android:layout_height="50dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <TextView
                    android:text="Thorax # (1 / 60)"
                    android:layout_height="wrap_content"
                    android:id="@+id/thoraxText"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="180dp" />

                <ImageButton
                    app:srcCompat="@mipmap/left_arrow"
                    android:id="@+id/leftThoraxButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="40dp" />

                <ImageButton
                    android:layout_width="50dp"
                    app:srcCompat="@mipmap/right_arrow"
                    android:id="@+id/rightThoraxButton"
                    android:layout_height="50dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:text="Abdomen # (1 / 60)"
                    android:layout_height="wrap_content"
                    android:id="@+id/abdomenText"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="180dp" />

                <ImageButton
                    app:srcCompat="@mipmap/left_arrow"
                    android:id="@+id/leftAbdomenButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="40dp" />

                <ImageButton
                    android:layout_width="50dp"
                    app:srcCompat="@mipmap/right_arrow"
                    android:id="@+id/rightAbdomenButton"
                    android:layout_height="50dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <Button
                    android:text="Back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backButton"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/darker_gray"
                    android:layout_marginRight="60dp" />

                <Button
                    android:text="Next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nextButton"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/holo_green_light" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
