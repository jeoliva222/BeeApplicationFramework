<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_log_bee__menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.beeapplicationframework.LogBeeActivity_Menu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="insideInset">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:alwaysDrawnWithCache="true"
                android:layout_height="220dp">

                <ImageView
                    android:id="@+id/beeView"
                    android:layout_width="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_height="220dp"
                    android:layout_weight="1"
                    android:layout_gravity="top|center_vertical" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Choose an identification process!"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/instructionTextView"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical|center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="150dp">

                    <Button
                        android:text="Guided ID"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:id="@+id/helpButton"
                        android:backgroundTint="#f6f4b8" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:minHeight="179dp"
                    android:layout_weight="1">

                    <Button
                        android:text="Manual ID \n (For Experts)"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:id="@+id/manualButton"
                        android:backgroundTint="#f6f4b8" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="75dp"
                android:layout_weight="0.95"
                android:layout_width="150dp">

                <Button
                    android:text="Back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backButton"
                    android:backgroundTint="@android:color/darker_gray"
                    android:layout_gravity="center_vertical|center_horizontal" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
