<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tutorial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.beeapplicationframework.TutorialActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:text="Tutorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/titleText"
                android:textSize="28sp"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:layout_marginBottom="20dp"
                android:textStyle="normal|bold" />

            <TextView
                android:text="How to use our App:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/instrText1"
                android:textSize="20sp"
                android:textStyle="normal|italic"
                android:layout_marginBottom="10dp" />

            <TextView
                android:text="1. Find a local bumblebee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/instrText2"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="10dp"
                android:textSize="16sp" />

            <TextView
                android:text="2. Open the &quot;Log a Bee&quot; feature on our App's home screen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/instrText3"
                android:layout_marginBottom="10dp"
                android:textSize="16sp" />

            <TextView
                android:text="3. Take a good picture of your bee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/instrText4"
                android:layout_marginBottom="10dp"
                android:textSize="16sp" />

            <TextView
                android:text="4. Go through the prompts to properly identify your bee's species"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/instrText5"
                android:layout_marginBottom="10dp"
                android:textSize="16sp" />

            <TextView
                android:text="5. If you saw your bee on a flower, follow the prompts to select basic information about the flower's physical description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/instrText6"
                android:layout_marginBottom="10dp"
                android:textSize="16sp" />

            <TextView
                android:text="6. Confirm and submit your log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/instrText7"
                android:layout_marginBottom="50dp"
                android:textSize="16sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="Back"
                    android:layout_height="wrap_content"
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:backgroundTint="@android:color/darker_gray"
                    android:onClick="goToMainActivity"
                    android:layout_marginRight="80dp" />

                <Button
                    android:text="Next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nextButton"
                    android:onClick="goToTutorial2Activity"
                    android:backgroundTint="@android:color/holo_green_light" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
